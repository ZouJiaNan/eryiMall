<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eryi.bean.dto.mapper.CarItemMapper">

    <resultMap id="CarItemResultMap" type="com.eryi.bean.po.CarItemPo">
        <id property="carId" column="car_id" />
        <result property="onSaleId" column="on_sale_id" />
    </resultMap>

    <!-- 新增 -->
    <insert id="insert" parameterType="com.eryi.bean.po.CarItemPo" useGeneratedKeys="true" keyProperty="carId">
        INSERT INTO car_item (
            on_sale_id
        )
        VALUES (
                   #{onSaleId}
               )
    </insert>

    <!-- 根据ID删除 -->
    <delete id="deleteById" parameterType="String">
        DELETE FROM car_item WHERE car_id = #{carId}
    </delete>

    <!-- 动态更新 -->
    <update id="updateById" parameterType="com.eryi.bean.po.CarItemPo">
        UPDATE car_item
        <set>
            <if test="onSaleId != null">on_sale_id = #{onSaleId}</if>
        </set>
        WHERE car_id = #{carId}
    </update>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="String" resultMap="CarItemResultMap">
        SELECT * FROM car_item WHERE car_id = #{carId}
    </select>

    <!-- 查询所有 -->
    <select id="findAll" resultMap="CarItemResultMap">
        SELECT * FROM car_item
    </select>

</mapper>
